<resources>
    <!-- Base Netflix theme for Day mode -->
    <style name="Theme.Netflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/darkGray</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Theme without ActionBar -->
    <style name="Theme.Netflix.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
